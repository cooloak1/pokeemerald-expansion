mapscripts TwinleafTown_PlayersHouse_1F_MapScripts {
	MAP_SCRIPT_ON_TRANSITION: TwinleafTown_PlayersHouse_1F_MapScript_OnTransition

	
	MAP_SCRIPT_ON_FRAME_TABLE [
		VAR_PLAYERS_MOM_STATE, 0: TwinleafTown_PlayersHouse_1F_EventScript_Mom_BarryLeft
	]
}

script TwinleafTown_PlayersHouse_1F_MapScript_OnTransition {
}

script TwinleafTown_PlayersHouse_1F_EventScript_Mom_BarryLeft {
	lock
	applymovement(1, Common_Movement_ExclamationMark)
	applymovement(OBJ_EVENT_ID_PLAYER, moves(walk_in_place_down))
	applymovement(1, moves(walk_in_place_up))
	waitmovement(0)
	delay(48)
	applymovement(1, moves(
		walk_up * 1
		walk_right * 3
		walk_up * 3
	))
	waitmovement(0)
	msgbox(TwinleafTown_PlayersHouse_1F_Text_BarryAlreadyLeft)
	closemessage
	applymovement(1, moves(
		walk_down * 3
		walk_left * 3
		walk_down * 1
		walk_in_place_up
	))
	waitmovement(0)
	setvar(VAR_PLAYERS_MOM_STATE, 1)
	release
	end
}

script TwinleafTown_PlayersHouse_1F_EventScript_ExitTrigger {
	lock
	applymovement(1, moves(walk_in_place_down))
	waitmovement(0)
	delay(48)
	applymovement(OBJ_EVENT_ID_PLAYER, moves(walk_in_place_up))
	waitmovement(0)
	msgbox(TwinleafTown_PlayersHouse_1F_Text_DontGoInTallGrass)
	closemessage
	setvar(VAR_PLAYERS_MOM_STATE, 2)
}

script TwinleafTown_PlayersHouse_1F_Mom_TalkedTo {
	switch (var(VAR_PLAYERS_MOM_STATE)) {
		case 0:
		case 1:
			msgbox(TwinleafTown_PlayersHouse_1F_Text_YouKnowBarry, MSGBOX_NPC)
		case 2:
			msgbox(TwinleafTown_PlayersHouse_1F_Text_TakeCare, MSGBOX_NPC)
	}
}

